<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PaymentGatewayActivity">

    <ImageView
        android:id="@+id/imgPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/payment_gateway" />

    <com.prakash.bookbazaar.utils.BookBazaarTextViewBold
        android:id="@+id/amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Order Total : "
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/checkout_label_value_textSize" />

    <com.prakash.bookbazaar.utils.BookBazaarTextViewBold
        android:id="@+id/amount_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText"
        android:textSize="20sp"
        tools:text="Rs 110"
        android:layout_below="@+id/amount_txt"
        android:layout_centerHorizontal="true"/>

    <com.prakash.bookbazaar.utils.BookBazaarButton
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/btn_padding"
        android:text="@string/make_payment"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_textSize"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>